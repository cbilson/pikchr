    PNum sw;               /* stroke width ("thinkness") */
    PNum dotted;           /* dotted:  <=0.0 for off */
    PNum dashed;           /* dashed:  <=0.0 for off */
    PNum chop1, chop2;     /* chop:    <=0.0 for off */
