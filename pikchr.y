    if( pElem->prop.chop1>0.0 ){
      pik_chop(p,&pElem->aPath[1],&pElem->aPath[0],pElem->prop.chop1);
    }
    if( pElem->prop.chop2>0.0 ){
      pik_chop(p,&pElem->aPath[n-2],&pElem->aPath[n-1],pElem->prop.chop2);
