      pik_draw_arrowhead(p,&pElem->aPath[n-2],&pElem->aPath[n-1],pElem);
    }
    for(i=0; i<pElem->nPath; i++){
      pik_append_xy(p,z,pElem->aPath[i].x,pElem->aPath[i].y);
      z = "L";
    }
    if( pElem->prop.fill>=0.0 && pElem->nPath>2 ){
      pik_append(p,"Z",1);
    }
    pik_append(p,"\" ",-1);
    pik_append_style(p,pElem);
